

main {text-align: center;} 
form {margin: 1em; font-size: 20px;}
input, button {font: inherit;}
label {margin-right: 0.5em;}
#tweetID {width: 20em;}
#bernie {
  width: 710px;
  height: 473px;
  background: url(https://cdn.gomix.com/f919105f-03fb-4e49-9855-732bbdf9a0f1%2Fbernie.jpg) top left no-repeat;
  position: relative;
  margin: 0 auto;
}

tweetWidth = 300

#tweet {
    width: tweetWidth + 0px;
    height: (tweetWidth * 156px / 211);
    transform: rotate(2.6deg) scale((211/tweetWidth));
    overflow: hidden;
    top: 90px;
    left: 353px;
    position: absolute;
    transform-origin: top left;
}

#tweet > div {
  margin: 0 auto;
}

footer {
  margin: 100px auto 10px
  font-size: small;
  color: #ccc;
  text-align: center;
}

footer a {
  color: inherit;
  text-decoration: inherit;
}